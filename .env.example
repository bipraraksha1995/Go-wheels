# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=gowheels_new
DB_USER=root
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=3306

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# GitHub OAuth2 (Optional)
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
# Security: Encryption at Rest
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Security: TLS/HTTPS (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=False

# Security: Argon2 Password Hashing
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=512
ARGON2_PARALLELISM=2


# ===================================
# 2FA API Configuration
# ===================================
# Choose your 2FA provider: twilio, auth0, or custom
TWOFA_PROVIDER=twilio

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Auth0 Configuration (if using Auth0)
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
TWOFA_API_URL=https://your-tenant.auth0.com

# Custom API Configuration (if using custom provider)
TWOFA_API_KEY=your_api_key_here
TWOFA_API_SECRET=your_api_secret_here
TWOFA_API_URL=https://your-api.com/send-sms
